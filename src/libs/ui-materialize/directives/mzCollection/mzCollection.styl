
.mz-collection
    min-width: 100%
    max-width: 100%
    width: 100%
    float: left
    position: relative
    list-style: none
    border: none
    background: none
    background-color: none


.mz-collection-item


    flex-container()
    box-shadow(0 2px 4px rgba(0,0,0,.2))
    width: 100%
    min-height: 48px
    overflow: hidden
    background-color: white
    flex-direction: column

    .mz-collection-item-heading

        flex-container()
        width: 100%
        height: 48px
        max-height: 48px
        min-height: 48px
        border-bottom-width: 1px
        border-bottom-color: lightgrey
        border-bottom-style: solid
        flex-direction: row
        position: relative
        cursor: pointer

        .mz-collection-item-heading-left

            flex-container()
            font-size: 2rem
            flex: 0 0 8.33333%
            justify-content: center
            flex-direction: row
            align-items: center
            .icon-circle-user

                border-radius(100%)
                width: 28px
                height: 28px
                font-size: 1.2rem
                text-align: center



        .mz-collection-item-heading-title

            flex-container()
            flex: 0 0 25%
            justify-content: flex-start
            flex-direction: row
            align-items: center


        .mz-collection-item-heading-middle

            // width 58.33333%
            flex-container()
            flex: 0 0 58.33333%
            justify-content: flex-start
            flex-direction: row
            align-items: center


        .mz-collection-item-heading-right

            top: 0
            right: 0
            z-index: 10
            width: 200px
            min-height: 46px
            max-height: 46px
            position: absolute
            justify-content: center
            align-items: center
            text-align: center
            display: none;

            i {


                flex: 1 0 auto
                line-height: 46px
                font-size: 1.5rem
                color: #dddddd
                margin: 0 10px

                &:hover {
                    color: grey
                }

            }

    &:hover

        .mz-collection-item-heading-right

            display: block
            flex-container()

    .mz-collection-item-content

        width: 100%
        max-width: 100%
        min-width: 100%
        height: 100%
        max-height: 100%
        min-height: 100%
        position: relative
        display: none
        padding: 20px
        vertical-scroll()












