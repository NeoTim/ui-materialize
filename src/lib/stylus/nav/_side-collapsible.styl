.nav-right,
.nav-left
    .side-collapsible.collapsible
        margin 0
        border none

        .side-collapse
            position:relative
            display block
            padding 0
            line-height 60px
            float none
            transition 0
            box-shadow(inset -10px 10px 10px rgba(0,0,0,0.1) !important)

            .collapsible-header, a.collapsible-header
                display block
                cursor pointer
                // background-color transparent
                border none
                line-height inherit
                height inherit
                color white
                margin 0
                .nav-action-text
                    display none

                & > i
                    line-height inherit

            .collapsible-body
                border none
                border: 0;
                background-color: #212121;
                width: 0
                // height: 100%
                transition width 1s cubic-bezier(0.19,0.99,0.01,0.99)
                li a
                    box-shadow(inset 0 0 0 rgba(0,0,0,0) !important)
                    margin: 0

            &:hover,
            &:active,
            &.active
                background-color #ff4081
                box-shadow(inset 0 0 0 rgba(0,0,0,0.1) !important)
                .collapsible-body
                    width: 100%


    &.nav-viz-thin

        .side-collapsible.collapsible
            .side-collapse
                min-width $nav-action-width-fold

                .collapsible-header
                    text-align: center
                .collapsible-body
                    top:0
                    position: absolute

                    .nav-action-group > li > a
                        align-items: flex-start
                        justify-content flex-start

                    .nav-action-text
                        display:block

                & > i
                    transition color 300ms ease
                &:hover,
                &:active,
                &.active
                    color white
                    & > i
                        color white
                    .collapsible-body

                        right: 64px
                        width: 250px




    &.nav-viz-fat
        .side-collapsible.collapsible
            .side-collapse
                min-height 48px

                & > .nav-action-text,
                & > .collapsible-header,
                & > a.collapsible-header
                    display block
                    padding-left 24px
                    .nav-action-text
                        display inline
                & > i
                    background-color none;

                &:hover,
                &:active,
                &.active
                    background-color #000000
