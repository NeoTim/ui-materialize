.mz-dropdown
  position  : relative

  .mz-dropdown-menu
    overflow     : hidden
    height       : auto
    position     : absolute
    width        : 0px
    min-width    : 0px
    height       : 0
    min-height   : 0px
    max-height   : 600px
    background   : white
    margin       : -15px 0 0 0
    transition   : min-height 400ms cubic-bezier(0.19,0.99,0.01,0.99), min-width 400ms cubic-bezier(0.19,0.99,0.01,0.99)
    & > li
      cursor      : pointer
      font-size   : 1.2rem
      color       : $2f2f2f
      line-height : 1.5rem

      &:hover
        background-color rgba(0,0,0,.06)

      & > a, & > span
        display: block;
        padding: 1rem 1rem;
        color: grey

    &.open
      transition : min-width 400ms cubic-bezier(0.19,0.99,0.01,0.99), min-height 400ms cubic-bezier(0.19,0.99,0.01,0.99) 50ms
      min-width  : 150px
      min-height : 100px
      height     : auto





