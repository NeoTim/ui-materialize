.bg-container
    position fixed
    z-index 1

    min-width 100vw
    max-width 100vw
    width 100vw
    min-height 100vw
    height 100vw

.shape-1
    width 900px
    height 500px
    position fixed
    transform: rotate(142deg) scale(2) skewx(-20deg) translate(300px)
    opacity 0.7



.transparent-bg
    height inherit
    width inherit
    min-width inherit
    max-width inherit
    margin 0
    padding 0
    position fixed
    top 0
    left inherit
    right inherit
    background-color rgba(0,0,0,0.6)
    z-index 1
    // filter blur(10px)
.blured-bg
    height inherit
    width inherit
    position relative
    left inherit
    right inherit
    background-color rgba(0,0,0,0.6)
    z-index 1
    filter blur(30px)




