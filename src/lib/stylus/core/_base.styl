.mz-materialize
    font-size 15px
    flex-container()
    flex-direction row
    margin 0
    padding 0
    min-width 100vw
    max-width 100vw
    width 100vw
    z-index 10
    height inherit



    &.mz-flex-column
        flex-direction: row

    .mz-nav
        flex-container()
        box-sizing(border-box)
        flex: 1 0 auto
        flex-direction: row
        width: 100%
        height $nav-bar-height

    .mz-main
        box-sizing(border-box)
        // flex: 1 0 auto
