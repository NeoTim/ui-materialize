.intro-section
    flex 1 0 auto
    // align-self stretch
    background #363636
    background-image url('images/md-1.png')
    background-size cover
    background-position top center
    background-attachment: fixed;
    background-repeat: no-repeat
    // min-width 100vw;
    min-height 800px;
    height 800px;

h1.title
    font-weight 500
    text-shadow(0 2px 2px rgba(0,0,0,.5))
    strong
        font-weight 100
h3.intro-text
    font-weight 100
    text-shadow(0 2px 2px rgba(0,0,0,.5))
    strong
        font-weight 700

.brand-logo
    text-shadow(0 2px 4px rgba(0,0,0,.1))

.intro-devices
    margin 0 auto
    width 400px
    padding 20px
    border-radius(10px)

    .intro-device-inner
        background white
        min-height 100%
        width 100%

    .intro-block
        height 50px
        box-shadow(0 2px 4px rgba(0,0,0,.3))


.page
    // position relative
    // height 100%
    header.page-header
        height 500px
        position absolute
        width 100%
        top 64px


    .page-title
        text-shadow 0 2px 2px rgba(0,0,0,0.1)
    .caption
        color white
        font-size 18px
    .page-content
        margin-top 300px
        position relative



pre code
  border-radius(5px)

  -webkit-box-shadow 0px 2px 4px rgba(0,0,0,0.3)
  background-color lighgrey !important
  background lighgrey !important
